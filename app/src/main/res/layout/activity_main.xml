<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    tools:override="true">


    <Toolbar
            android:id="@+id/up_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/viol"
            android:elevation="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="230dp"
                android:text="Princess"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/friends"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="230dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_friend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </Toolbar>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/up_layout"
        android:layout_above="@+id/bottom_layout"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/viol"
        android:elevation="15dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_ic"
                android:layout_width="@dimen/bottom_menu_size"
                android:layout_height="@dimen/bottom_menu_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_home"
                android:layout_marginStart="15dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/camera_ic"
                android:layout_width="@dimen/bottom_menu_size"
                android:layout_height="@dimen/bottom_menu_size"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_toStartOf="@+id/profile_ic"
                android:layout_toEndOf="@+id/home_ic"
                android:src="@drawable/ic_camera"
                />

            <ImageView
                android:id="@+id/profile_ic"
                android:layout_width="@dimen/bottom_menu_size"
                android:layout_height="@dimen/bottom_menu_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="15dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

